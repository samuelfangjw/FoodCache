<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.breakfastseta.foodcache">

    <uses-sdk tools:overrideLibrary="com.google.zxing.client.android" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AddRecipeActivity"></activity>
        <activity android:name=".ViewRecipe" />
        <activity android:name=".RecipeActivity" />
        <activity
            android:name=".EditProfileActivity"
            android:parentActivityName=".ProfileActivity" />
        <activity android:name=".EditShoppingIngredient" />
        <activity
            android:name=".AddShopIngredientActivity"
            android:parentActivityName=".ShoppingListActivity" />
        <activity
            android:name=".FoodcacheActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ShoppingListActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".EditItem"
            android:parentActivityName=".FoodcacheActivity" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".FoodcacheActivity" />
        <activity
            android:name=".AddIngredientActivity"
            android:parentActivityName=".FoodcacheActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />

        <receiver android:name=".AlertReceiver" />
    </application>

</manifest>